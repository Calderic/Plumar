---
const { title, description, language = 'zh-CN' } = Astro.props;
import { getPlumarConfig } from '../utils/config.js';

const config = getPlumarConfig();
---

<!DOCTYPE html>
<html lang={language}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    {config.author && <meta name="author" content={config.author} />}
    <style>
      /* 风格简约复古设计 */
      * {
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', 'Helvetica Neue', sans-serif;
        max-width: 680px;
        margin: 0 auto;
        padding: 40px 20px;
        line-height: 1.7;
        color: #1d1d1f;
        background: #fafafa;
        font-size: 17px;
        font-weight: 400;
      }

      header {
        text-align: center;
        margin-bottom: 60px;
        padding-bottom: 40px;
        border-bottom: 1px solid #d2d2d7;
      }

      h1 {
        font-size: 32px;
        font-weight: 600;
        color: #1d1d1f;
        margin: 0 0 8px 0;
        letter-spacing: -0.5px;
      }

      header p {
        font-size: 19px;
        color: #86868b;
        margin: 0 0 24px 0;
        font-weight: 400;
      }

      nav {
        display: flex;
        justify-content: center;
        gap: 32px;
      }

      nav a {
        color: #06c;
        text-decoration: none;
        font-weight: 400;
        font-size: 17px;
        transition: color 0.2s ease;
      }

      nav a:hover {
        color: #0051d5;
      }

      main {
        margin: 0 0 80px 0;
      }

      h2 {
        font-size: 28px;
        font-weight: 600;
        color: #1d1d1f;
        margin: 48px 0 16px 0;
        letter-spacing: -0.3px;
      }

      h3 {
        font-size: 22px;
        font-weight: 600;
        color: #1d1d1f;
        margin: 32px 0 12px 0;
      }

      p {
        margin: 0 0 20px 0;
        color: #1d1d1f;
      }

      a {
        color: #06c;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      code {
        font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, monospace;
        background: #f5f5f7;
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 15px;
        color: #d73502;
      }

      pre {
        background: #f5f5f7;
        padding: 20px;
        border-radius: 8px;
        overflow-x: auto;
        margin: 24px 0;
      }

      pre code {
        background: none;
        padding: 0;
        color: #1d1d1f;
      }

      footer {
        text-align: center;
        padding-top: 40px;
        border-top: 1px solid #d2d2d7;
        color: #86868b;
        font-size: 15px;
      }

      footer p {
        margin: 8px 0;
        color: #86868b;
      }

      /* 响应式设计 */
      @media (max-width: 768px) {
        body {
          padding: 32px 16px;
          font-size: 16px;
        }

        h1 {
          font-size: 28px;
        }

        h2 {
          font-size: 24px;
        }

        header p {
          font-size: 17px;
        }

        nav {
          gap: 24px;
        }

        header {
          margin-bottom: 48px;
          padding-bottom: 32px;
        }
      }
    </style>
  </head>
  <body>
    <header>
      <h1>{config.title}</h1>
      <p>{config.description}</p>
      <nav>
        <a href="/">首页</a>
        <a href="/blog">博客</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <p>由 Plumar 强力驱动</p>
    </footer>
  </body>
</html> 