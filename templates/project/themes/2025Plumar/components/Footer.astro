---
import { getPlumarConfig } from '../../../src/utils/config.js';

const config = getPlumarConfig();
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <!-- 站点信息 -->
      <div class="footer-section">
        <h3>{config.title}</h3>
        <p>{config.description}</p>
        <div class="footer-social">
          <a href="/rss.xml" aria-label="RSS订阅" title="RSS订阅">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
              <path d="M4 11a9 9 0 0 1 9 9" stroke="currentColor" stroke-width="2" fill="none"/>
              <path d="M4 4a16 16 0 0 1 16 16" stroke="currentColor" stroke-width="2" fill="none"/>
              <circle cx="5" cy="19" r="1" fill="currentColor"/>
            </svg>
          </a>
          
          {config.github && (
            <a href={config.github} aria-label="GitHub" title="GitHub" target="_blank" rel="noopener noreferrer">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" stroke="currentColor" stroke-width="2" fill="none"/>
              </svg>
            </a>
          )}
          
          {config.twitter && (
            <a href={config.twitter} aria-label="Twitter" title="Twitter" target="_blank" rel="noopener noreferrer">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z" stroke="currentColor" stroke-width="2" fill="none"/>
              </svg>
            </a>
          )}
          
          {config.email && (
            <a href={`mailto:${config.email}`} aria-label="邮箱" title="邮箱">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" stroke="currentColor" stroke-width="2" fill="none"/>
                <polyline points="22,6 12,13 2,6" stroke="currentColor" stroke-width="2"/>
              </svg>
            </a>
          )}
        </div>
      </div>
      
      <!-- 快速链接 -->
      <div class="footer-section">
        <h3>快速导航</h3>
        <ul class="footer-links">
          <li><a href="/">首页</a></li>
          <li><a href="/blog">博客</a></li>
          <li><a href="/tags">标签</a></li>
          <li><a href="/about">关于</a></li>
        </ul>
      </div>
      
      <!-- 最近文章 -->
      <div class="footer-section">
        <h3>技术栈</h3>
        <ul class="footer-links">
          <li><a href="https://astro.build" target="_blank" rel="noopener noreferrer">Astro 5.0</a></li>
          <li><a href="https://github.com/plumar/plumar" target="_blank" rel="noopener noreferrer">Plumar</a></li>
          <li><a href="https://www.typescriptlang.org" target="_blank" rel="noopener noreferrer">TypeScript</a></li>
          <li><a href="https://tailwindcss.com" target="_blank" rel="noopener noreferrer">现代CSS</a></li>
        </ul>
      </div>
      
      <!-- 其他信息 -->
      <div class="footer-section">
        <h3>2025Plumar</h3>
        <ul class="footer-links">
          <li><a href="#" onclick="document.getElementById('themeToggle')?.click(); return false;">切换主题</a></li>
          <li><a href="#" onclick="window.scrollTo({top: 0, behavior: 'smooth'}); return false;">返回顶部</a></li>
          <li><a href="/sitemap.xml">站点地图</a></li>
          <li><a href="/rss.xml">RSS订阅</a></li>
        </ul>
      </div>
    </div>
    
    <!-- 版权信息 -->
    <div class="footer-bottom">
      <p>
        © {currentYear} {config.title}. 
        由 <a href="https://github.com/plumar/plumar" target="_blank" rel="noopener noreferrer">Plumar</a> 
        和 <a href="https://astro.build" target="_blank" rel="noopener noreferrer">Astro</a> 强力驱动
      </p>
      <p class="footer-theme-info">
        使用 <strong>2025Plumar</strong> 主题 - 现代化蓝白设计
      </p>
    </div>
  </div>
</footer>

<style>
  /* 社交链接样式 */
  .footer-social {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }
  
  .footer-social a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    color: var(--color-text-muted);
    background-color: var(--color-surface-alt);
    border-radius: var(--radius-md);
    transition: all var(--animation-duration) var(--animation-easing);
  }
  
  .footer-social a:hover {
    color: var(--color-primary);
    background-color: rgba(37, 99, 235, 0.1);
    transform: translateY(-2px);
  }
  
  /* 主题信息样式 */
  .footer-theme-info {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    margin-top: 0.5rem;
  }
  
  .footer-theme-info strong {
    color: var(--color-primary);
    font-weight: 600;
  }
  
  /* 移动端调整 */
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
    
    .footer-social {
      gap: 0.75rem;
    }
    
    .footer-social a {
      width: 2.25rem;
      height: 2.25rem;
    }
  }
  
  @media (max-width: 480px) {
    .footer-content {
      grid-template-columns: 1fr;
    }
  }
</style> 